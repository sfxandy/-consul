#!/usr/bin/env bash
# keepalive.sh - spinner + harmless character for SSH keepalive

spin='-\|/'
i=0

# Hide the cursor while running
tput civis

# Restore cursor on exit
trap "tput cnorm; echo; exit" INT TERM

while true; do
  i=$(( (i+1) %4 ))
  # Spinner animation
  printf "\r${spin:$i:1} keepalive..."
  # Send a harmless backspace so remote sees activity
  printf "\b" >/dev/tty
  sleep 30   # adjust interval (30s is typical SSH keepalive period)
done
